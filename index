<body>

<header>
    <h1>Guest for Dinner</h1>
    <p>Ricette Italiane Casuali</p>
</header>

<div class="recipe-container" id="recipe-container">
    <!-- Le ricette verranno inserite qui da JavaScript -->
</div>

<button onclick="generateRecipes()">Nuova Ricetta</button>

<script>
    const ricette = [
        { titolo: "Spaghetti alla Carbonara", descrizione: "Una classica ricetta romana a base di uova, guanciale, pecorino romano e pepe nero." },
        { titolo: "Risotto alla Milanese", descrizione: "Un piatto tradizionale lombardo preparato con riso, zafferano e brodo di carne." },
        { titolo: "Lasagne alla Bolognese", descrizione: "Strati di pasta all'uovo, ragù alla bolognese, besciamella e parmigiano reggiano." },
        { titolo: "Parmigiana di Melanzane", descrizione: "Un piatto ricco a base di melanzane fritte, mozzarella, salsa di pomodoro e basilico." },
        { titolo: "Orecchiette con le Cime di Rapa", descrizione: "Un primo piatto pugliese con pasta fresca, cime di rapa, aglio e acciughe." },
        { titolo: "Tiramisu", descrizione: "Il celebre dolce al cucchiaio a base di mascarpone, caffè, savoiardi e cacao amaro." },
        { titolo: "Frittata di Zucchine", descrizione: "Un piatto semplice e versatile preparato con uova, zucchine e parmigiano." },
        { titolo: "Polenta con Salsiccia", descrizione: "Un piatto del nord Italia con polenta, salsiccia e sugo di pomodoro." },
        { titolo: "Minestrone", descrizione: "Una zuppa nutriente con una varietà di verdure fresche, legumi e pasta." },
        { titolo: "Panna Cotta", descrizione: "Un dolce delicato a base di panna, zucchero e vaniglia, spesso servito con frutti di bosco." },
        { titolo: "Ravioli al Tartufo", descrizione: "Pasta ripiena con un delicato ripieno al tartufo e servita con burro fuso." },
        { titolo: "Pasta alla Norma", descrizione: "Un piatto siciliano a base di pasta, melanzane fritte, ricotta salata e pomodoro." },
        { titolo: "Arancini Siciliani", descrizione: "Sfere di riso ripiene, impanate e fritte, tipiche della cucina siciliana." },
        { titolo: "Gnocchi di Patate", descrizione: "Gnocchi fatti in casa a base di patate, serviti con burro e salvia o sugo di pomodoro." }
    ];

    function getRandomRecipes() {
        const shuffled = ricette.sort(() => 0.5 - Math.random());
        return shuffled.slice(0, 10);
    }

    function generateRecipes() {
        const container = document.getElementById('recipe-container');
        container.innerHTML = '';
        const randomRecipes = getRandomRecipes();

        randomRecipes.forEach(ricetta => {
            const div = document.createElement('div');
            div.className = 'recipe';
            div.innerHTML = `<h2>${ricetta.titolo}</h2><p>${ricetta.descrizione}</p>`;
            container.appendChild(div);
        });
    }

    // Genera le ricette iniziali quando la pagina viene caricata
    window.onload = generateRecipes;
</script>

</body>
</html>
