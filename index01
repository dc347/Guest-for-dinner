function generateRecipes() {
    console.log("Generating recipes...");  // Aggiungi questo per vedere se la funzione viene chiamata
    const container = document.getElementById('recipe-container');
    container.innerHTML = '';
    const randomRecipes = getRandomRecipes();

    randomRecipes.forEach(ricetta => {
        const div = document.createElement('div');
        div.className = 'recipe';
        div.innerHTML = `<h2>${ricetta.titolo}</h2><p>${ricetta.descrizione}</p>`;
        container.appendChild(div);
    });
}
